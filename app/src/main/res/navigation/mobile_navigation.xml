<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_check_out">

    <fragment
        android:id="@+id/nav_check_out"
        android:name="com.chcreation.pointofsale.home.HomeFragment"
        android:label="Check Out"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/nav_catalog"
        android:name="com.chcreation.pointofsale.product.ProductFragment"
        android:label="Catalog"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/nav_manage_product"
        android:name="com.chcreation.pointofsale.product.ManageProductFragment"
        android:label="Manage Product"
        tools:layout="@layout/fragment_manage_product" >

        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_customer"
        android:name="com.chcreation.pointofsale.customer.CustomerFragment"
        android:label="Customer"
        tools:layout="@layout/fragment_customer" >

        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_transaction"
        android:name="com.chcreation.pointofsale.transaction.TransactionFragment"
        android:label="Transaction"
        tools:layout="@layout/fragment_transaction" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_user_list"
        android:name="com.chcreation.pointofsale.user.UserListFragment"
        android:label="User List"
        tools:layout="@layout/fragment_user_list" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_analytics"
        android:name="com.chcreation.pointofsale.analytic.AnalyticFragment"
        android:label="Analytic"
        tools:layout="@layout/fragment_analytic" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.chcreation.pointofsale.AboutFragment"
        android:label="About Creator"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_home"
            app:destination="@id/nav_check_out" />
    </fragment>
</navigation>