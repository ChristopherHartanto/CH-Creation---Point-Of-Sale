<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:id="@+id/tvRowCartQty"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="2dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/tvRowCartName"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:id="@+id/layoutRowCartDiscount">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:id="@+id/tvRowCartDiscountPrice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:background="@color/colorGrey"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/colorGrey"
                    android:id="@+id/tvRowCartDiscountPriceLine"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/tvRowCartPrice"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/colorBlack"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:layout_weight="4"
        android:gravity="center_vertical|end"
        android:id="@+id/tvRowCartTotalPrice"/>

</LinearLayout>